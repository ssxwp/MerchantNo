<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroudcolor"
    tools:context="com.qingyuan.tianya.merchant.activity.ChangeSortActivity">
    <com.qingyuan.tianya.merchant.view.HeaderView
        android:id="@+id/sort_head"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:middleText="选择分类"
        app:rightText="保存">

    </com.qingyuan.tianya.merchant.view.HeaderView>
    <LinearLayout
        android:id="@+id/sort_line"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/sort_head"
        android:layout_margin="15dp">
        <TextView
            android:id="@+id/sort_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/lightgray"
            android:gravity="center"
            android:text="一级分类"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:drawableRight="@mipmap/arrow_down4"
            android:background="@drawable/searchview"/>

        <TextView
            android:id="@+id/sort_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:textColor="@color/lightgray"
            android:gravity="center"
            android:text="二级分类"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:drawableRight="@mipmap/arrow_down4"
            android:background="@drawable/searchview"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sort_line"
        android:layout_marginLeft="15dp"
        android:textSize="14sp"
        android:textColor="@color/lightdark"
        android:text="*选择所属行业分类"
        />
</RelativeLayout>
