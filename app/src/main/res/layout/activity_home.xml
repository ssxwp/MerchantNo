<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudcolor"
    tools:context=".activity.HomeActivity">

   <!-- <com.qingyuan.tianya.merchant.view.HeaderView
        android:id="@+id/home_head"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:middleText="商家版"
        app:middleTextSize="18sp"
        app:middleTextColor="@color/white"
        app:rightText="登录">

    </com.qingyuan.tianya.merchant.view.HeaderView>-->
    <RelativeLayout
        android:id="@+id/head_rel"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="#262A3B">
        <TextView
            android:id="@+id/out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换账号"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="12dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>
        <TextView

            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家版"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/home_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="12dp"/>
        <ImageView
            android:id="@+id/home_add_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add_goods"
            android:layout_marginTop="123dp"
            android:layout_marginLeft="68dp"/>
        <TextView
            android:id="@+id/add_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加商品"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_below="@id/home_add_img"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="10dp"/>
       <!-- <ImageView
            android:id="@+id/home_se_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add_goods"
            android:layout_marginTop="123dp"
            android:layout_marginLeft="68dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码商品"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_below="@id/home_se_img"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>-->
        <ImageView
            android:id="@+id/home_sure_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sure"
            android:layout_alignParentRight="true"
            android:layout_marginTop="122dp"
            android:layout_marginRight="55dp"/>
        <TextView
            android:id="@+id/sure_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认订单"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_below="@id/home_sure_img"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="43dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/info_rel"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/head_rel"
        android:layout_marginTop="4dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/textcolor"
            android:text="商家详情"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/info_rel"
        android:background="@color/lightdark"
        android:layout_marginLeft="15dp"
        />
    <RelativeLayout
        android:id="@+id/goods_rel"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@id/view1"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/textcolor"
            android:text="商品列表"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/goods_rel"
        android:background="@color/lightdark"
        android:layout_marginLeft="15dp"
        />
    <RelativeLayout
        android:id="@+id/se_rel"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@id/view2"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/textcolor"
            android:text="验证码验证"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/se_rel"
        android:background="@color/lightdark"
        android:layout_marginLeft="15dp"
        />
    <RelativeLayout
        android:id="@+id/qr_rel"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@id/view3"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/textcolor"
            android:text="扫一扫"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"/>
    </RelativeLayout>
</RelativeLayout>
