<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.LoginActivity">
    <com.qingyuan.tianya.merchant.view.HeaderView
        android:id="@+id/login_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:middleText="登录"
        android:background="#262a3b"
        >

    </com.qingyuan.tianya.merchant.view.HeaderView>
    <ImageView
        android:id="@+id/im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/zhuce_logo"
        android:layout_below="@id/login_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"/>
    <RelativeLayout
        android:id="@+id/lay1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/im"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="30dip"
        android:background="@color/backgroudcolor" >

        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/zhanghao" />

        <EditText
            android:id="@+id/et_reg_phone"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dip"
            android:layout_toRightOf="@id/img_phone"
            android:gravity="center_vertical"
            android:hint="输入账号"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#aaaaaa"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/log_lay3"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/lay1"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:background="@color/backgroudcolor" >

        <ImageView
            android:id="@+id/iv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/mima" />

        <EditText
            android:id="@+id/et_reg_password"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dip"
            android:layout_toRightOf="@id/iv_password"
            android:gravity="center_vertical"
            android:hint="输入密码"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#aaaaaa"
            android:textSize="16sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/login_log"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_below="@id/log_lay3"
        android:background="#00a1ea"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="16sp"
        android:text="登录"
        android:gravity="center"/>
    <TextView
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_log"
        android:text="已登录，请先退出登录"
        android:textSize="16sp"
        android:textColor="@color/lightdark"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"/>
